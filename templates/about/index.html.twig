{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <div class="container">

        <div class="example-wrapper">

            {% for message in app.flashes('removed') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <h1>Korisnici</h1>
            <table class="table table-dark">
                <thead>
                <tr>
                    <td>ID</td>
                    <td>Korisnik</td>
                    <td>Datum rođenja</td>
                    <td>Država</td>
                    <td>Opcije</td>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td> {{ user.id }} </td>
                        <td> {{ user.getFullName }} </td>
                        <td> {{ user.birthDate.format('d/m/Y') }}</td>
                        <td> {{ user.country.name }} </td>
                        <td> <a href="#"> Edit </a></td>
                        <td> <a href="{{ path('app_delete', { id: user.id }) }}"> Delete </a></td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>

    </div>

{% endblock %}
